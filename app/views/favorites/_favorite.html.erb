  <% if blog.favorited_by?(current_user) %>
    <%= button_to blog_favorites_path(blog_id: blog.id), method: :delete, class: 'btn favorite-delete',
        remote: true do %>
      <span class="glyphicon glyphicon-ok">お気に入り登録(<%= blog.favorites.count %>)</span>
    <% end %>    
  <% else %>
    <%= button_to blog_favorites_path(blog_id: blog.id), method: :post, class: 'btn favorite-create',
        remote: true do %>
      <span class="glyphicon glyphicon-ok">お気に入り登録(<%= blog.favorites.count %>)</span>
    <% end %>
  <% end %>
