<table class="table table-hover">
  <thead>
    <h2>メッセージ一覧</h2>
  </thead>
  <tbody>
    <% @conversions.each do |conversion| %>
      <td>
        <% if conversion.target_user(current_user).present? %>
          <%= link_to conversion.target_user(current_user).name, conversion_messages_path(conversion)%>
        <% end %>
      </td>
    <% end %>
  </tbody>
</table>