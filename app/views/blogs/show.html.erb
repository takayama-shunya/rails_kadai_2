<h3>詳細</h3>
<p><%= notice %></p>
<div class="blog-show">
   <p>名前：<span id="user-name"><%= @blog.user_name %></span>
      <%= image_tag @blog.user_icon.thumb.url, id:"user-icon" if @blog.user_icon.present? %></P>
</div>
<div class="blog-show">
   <p>内容：<br><%= @blog.content %></p>
</div>
<div class="blog-show">
   <p>画像：<br><%= image_tag(@blog.image.url) if @blog.image? %>
</div>
<div id="comments_area">
   <%= render partial: 'comments/index', locals: { comments: @comments, blog: @blog } %>
</div>
<%= render partial: 'comments/form', locals: { comment: @comment, blog: @blog } %>
<% if current_user.id == @blog.user_id %>
   <div class="blog-show">
      <%= button_to edit_blog_path(@blog.id), method: :get, class:"btn btn-warning" do %>
         <span>編集</span>
      <% end %>
   </div>
<% end %>

